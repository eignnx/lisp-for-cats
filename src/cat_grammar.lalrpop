use ast;

grammar;

pub AtomT: ast::Atom<'input> = r"[^\s\(\)]+"
    => ast::Atom::from(<>); // One of ast::Atom::{Num, Sym}

pub ExprT: ast::Expr<'input> = {

    AtomT => ast::Expr::Atom(<>),

    "(" <first: ExprT> <rest: ExprT*> ")" => {
        let mut v = vec![first];
        v.extend(rest);
        ast::Expr::from(v) // Converts into ast::Expr::SExpr
    }
}

